{
  "name": "preact-www",
  "version": "0.3.0",
  "description": "Preact website.",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --inline --hot --progress",
    "start": "superstatic build -p ${PORT:-8080} --host 0.0.0.0 --gzip -c '{\"rewrites\": [{\"source\":\"**\",\"destination\":\"index.html\"}],\"headers\":[{\"source\":\"**\",\"headers\":[{\"key\":\"Cache-Control\",\"value\":\"max-age=86400\"}]}]}'",
    "prestart": "npm run build",
    "build": "microbundle src/lib/polyfills.js --target web --external none -o build/polyfills.js -f iife && cross-env NODE_ENV=production webpack",
    "prebuild": "npm run -s protect && rm -rf build/assets build/content && mkdir -p build",
    "test": "npm run -s lint && npm run -s test:karma",
    "test:karma": "karma start test/karma.conf.js --single-run",
    "protect": "[ \"$NODE_ENV\" = \"production\" ] && snyk protect || exit 0",
    "lint": "eslint {src,test}",
    "predeploy": "npm run -s build",
    "deploy": "cp build/index.html build/200.html && surge -d preactjs.com build",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "keywords": [
    "preact",
    "boilerplate",
    "webpack"
  ],
  "license": "MIT",
  "author": "Jason Miller <jason@developit.ca>",
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/runtime": "^7.2.0",
    "eslint": "^4.9.0",
    "request": "2.88.0",
    "eslint-config-synacor": "^2.0.2",
    "identity-obj-proxy": "^3.0.0",
    "per-env": "^1.0.2",
    "jest": "^21.2.1",
    "offline-plugin": "^5.0.6",
    "preact-render-spy": "^1.2.1"
  },
  "dependencies": {
    "babel-standalone": "^6.26.0",
    "classnames": "^2.2.6",
    "codemirror": "^5.42.0",
    "decko": "^1.1.3",
    "highlight.js": "^9.13.1",
    "isomorphic-fetch": "^2.2.1",
    "isomorphic-unfetch": "^3.0.0",
    "less": "^3.9.0",
    "less-loader": "^4.1.0",
    "linkstate": "^1.1.1",
    "marked": "^0.3.5",
    "node-less": "^1.0.0",
    "preact": "^8.4.2",
    "preact-cli": "^3.0.0-next.16",
    "preact-compat": "^3.18.4",
    "preact-markup": "^1.3.0",
    "preact-render-to-string": "^4.1.0",
    "preact-router": "^2.6.1",
    "progress-spinner": "^1.1.0",
    "promise-polyfill": "^8.1.0",
    "snyk": "^1.116.4",
    "superstatic": "^4.0.3",
    "surge": "^0.20.1",
    "unfetch": "^4.0.1",
    "unistore": "^3.1.0",
    "worker-loader": "^2.0.0",
    "yaml": "^0.3.0"
  },
  "main": "webpack.config.babel.js",
  "directories": {
    "test": "test"
  },
  "snyk": true
}
